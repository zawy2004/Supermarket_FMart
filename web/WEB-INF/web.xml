<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" version="5.0" metadata-complete="false">

    <display-name>Supermarket FMart</display-name>
    <description>Supermarket Management System</description>

    <!-- Cấu hình Servlet cho ProductServlet (nếu có) -->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>controller.admin.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>controller.admin.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/ProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/CategoryServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendVerificationCodeServlet</servlet-name>
        <servlet-class>controller.user.SendVerificationCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendVerificationCodeServlet</servlet-name>
        <url-pattern>/SendVerificationCodeServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.user.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
        <!-- Admin Coupon Management -->
    <servlet>
        <servlet-name>CouponManagementServlet</servlet-name>
        <servlet-class>controller.admin.CouponManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CouponManagementServlet</servlet-name>
        <url-pattern>/CouponManagementServlet</url-pattern>
    </servlet-mapping>

    <!-- Customer Coupon - Using @WebServlet annotation instead -->

    <!-- Welcome file configuration -->
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    
    <!-- Session Configuration (Optional, adjust as needed) -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- Session timeout in minutes -->
    </session-config>
    
