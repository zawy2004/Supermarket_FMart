    </servlet>
    <servlet-mapping>
        <servlet-name>SendVerificationCodeServlet</servlet-name>
        <url-pattern>/SendVerificationCodeServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.user.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
        <!-- Admin Coupon Management -->
    <servlet>
        <servlet-name>CouponManagementServlet</servlet-name>
        <servlet-class>controller.admin.CouponManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CouponManagementServlet</servlet-name>
        <url-pattern>/admin/coupon</url-pattern>
    </servlet-mapping>

    <!-- Customer Coupon - Using @WebServlet annotation instead -->

    <!-- Welcome file configuration -->
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    
    <!-- Session Configuration (Optional, adjust as needed) -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- Session timeout in minutes -->
    </session-config>
    
